include("gfx.so");

update = function()
{
	if(gfx.key_pressed("q"))
	{
		gfx.close();
	}
}

draw = function()
{
	gfx.clear();
	gfx.fill_rect(0,0,64,64,gfx.color(255,0,0));
	gfx.display();
}

init = function()
{
	gfx.init("Game", 800,600);
	while(gfx.is_opened)
	{
		update();
		draw();
	}
}

init();
